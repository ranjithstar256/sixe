                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/lite_slate_grey"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are available between these timings"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_starttime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Tap to choose"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:background="@drawable/text_view_border"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:id="@+id/btn_endtime"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_endtime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Tap to choose"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@drawable/text_view_border"
                    android:textAlignment="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnUpdateTime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:text="Update"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_gravity="center"
                android:textColor="@color/dark_slate_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/dark_slate_grey2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lite_slate_grey2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YOUR BLACK DAYS"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/lite_slate_grey"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are not available in these days"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="15sp"/>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_blackdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to choose"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:background="@drawable/text_view_border"
                android:textColor="@color/white"
                android:maxLines="3"
                android:breakStrategy="simple"
                android:ellipsize="none"
                android:scrollHorizontally="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btnBlackDates"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:text="Update"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:textColor="@color/dark_slate_grey"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>

